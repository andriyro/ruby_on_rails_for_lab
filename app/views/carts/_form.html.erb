<%= form_with(model: cart) do |form| %>
  <% if cart.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cart.errors.count, "error") %> prohibited this cart from being saved:</h2>

      <ul>
        <% cart.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Назва кошика", style: "display: block" %>
    <%= form.text_field(:namecart, {:class =>'form-control'}) %>
  </div>

  <div>
    <%= form.label "ID", style: "display: block" %>
    <%= form.number_field(:userid, {:class =>'form-control'} )%>
  </div>

  <div>
    <%= form.label "Статус", style: "display: block" %>
    <%= form.text_field(:status, {:class =>'form-control'}) %>
  </div>

  <div>
    <%= form.label "Час створення", style: "display: block" %>
    <%= form.datetime_field(:creation_timestamp, {:class =>'form-control'}) %>
  </div>
<br>
  <div>
    <%= form.submit("Зберегти", {:class =>'btn btn-success'})%>
  </div>
<% end %>
